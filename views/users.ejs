<%- include ('header') %>

    <!-- Progress Table start -->
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Users Table</h4>
                <div class="single-table">
                    <div class="table-responsive">
                        <table class="table table-hover progress-table text-center">
                            <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">user id</th>
                                    <th scope="col">email</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% if (result.length > 0) { %>
                                <% for (var i = 0; i < result.length; i++) { %>
                                <tr>
                                    <th scope="row"><%= i+1; %></th>
                                    <td><%= result[i]['common_user_id']; %></td>
                                    <td><%= result[i]['email']; %></td>
                                    <td>
                                        <ul class="d-flex justify-content-center">
                                            <% id=result[i]['common_user_id'];%>
                                            <% if (result[i]['permitted'] == 'yes') { %>
                                                <li><a onclick="return confirmUpdate('/users/block_user?id=<%= id %>', 'Do you want to block this user ?');" class="text-danger" style="cursor: pointer; font-weight: 400;">Block</a></li>
                                            <% } else { %>
                                                <li><a onclick="return confirmUpdate('/users/unblock_user?id=<%= id %>', 'Do you want to unblock this user ?');" class="text-primary" style="cursor: pointer; font-weight: 400;">Unblock</a></li>
                                            <% } %>
                                        </ul>
                                    </td>
                                </tr>
                                <% } %>
                            <% } else { %>
                                <tr style="text-align: center; padding: 100px;"><td colspan="4">No results found.</td></tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Progress Table end -->

<%- include ('footer') %>