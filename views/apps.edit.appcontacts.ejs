<%- include ('header') %>

    <div class="col-12 mt-5">
        <div class="card form-card">
            <div class="card-body">
                <h4 class="header-title">Edit App Privacy Officer Contact Details</h4>
                <form action="/apps/edit_appcontacts?id=<%= id %>" method="POST">
                    <% if (locals.error) { %>
                        <div class="alert alert-danger error-msg"><%= error %></div>
                    <% } %>
                    <div class="form-group">
                        <label for="id" class="col-form-label">ID</label>
                        <input class="form-control" type="text" id="id" name="id" value="<%= id %>" readonly required>
                    </div>
                    <div class="form-group">
                        <label for="contact_link" class="col-form-label">Contact Link</label>
                        <input class="form-control" type="url" id="contact_link" name="contact_link" value="<%= result[0].contact_link %>">
                    </div>
                    <div class="form-group">
                        <label for="email_address" class="col-form-label">Email Address</label>
                        <input class="form-control" type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" id="email_address" name="email_address" value="<%= result[0].email_address %>">
                    </div>
                    <label class="col-form-label">Address:</label>
                    <div class="form-group">
                        <label for="first_line" class="col-form-label">- First Line</label>
                        <input class="form-control" type="text" id="first_line" name="first_line" value="<%= result[0].first_line %>">
                    </div>
                    <div class="form-group">
                        <label for="second_line" class="col-form-label">- Second Line</label>
                        <input class="form-control" type="text" id="second_line" name="second_line" value="<%= result[0].second_line %>">
                    </div>
                    <div class="form-group">
                        <label for="third_line" class="col-form-label">- Third Line</label>
                        <input class="form-control" type="text" id="third_line" name="third_line" value="<%= result[0].third_line %>">
                    </div>
                    <div class="form-group">
                        <label for="fourth_line" class="col-form-label">- Fourth Line</label>
                        <input class="form-control" type="text" id="fourth_line" name="fourth_line" value="<%= result[0].fourth_line %>">
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
                    <a href="/apps/app?app_id=<%= result[0].app_id %>" class="btn btn-secondary mt-4 pr-4 pl-4" style="color: #FFF;">Cancel</a>
                </form>
            </div>
        </div>
    </div>

<%- include ('footer') %>