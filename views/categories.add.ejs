<%- include ('header') %>

    <div class="col-12 mt-5">
        <div class="card form-card">
            <div class="card-body">
                <h4 class="header-title">Add New Category</h4>
                <form action="/categories/add" method="POST">
                    <% if (locals.error) { %>
                        <div class="alert alert-danger error-msg"><%= error %></div>
                    <% } %>
                    <div class="form-group">
                        <label for="name" class="col-form-label">Name</label>
                        <input class="form-control" type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Icon</label>
                        <select class="custom-select" name="icon" required>
                            <option selected="selected" value="">Select an icon</option>
                            <% Object.keys(materialicons).forEach(function(key) { %>
                                <option class="material-icons" value="<%= materialicons[key] %>"><%= key %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
                </form>
            </div>
        </div>
    </div>

<%- include ('footer') %>