<%- include ('header') %>

    <div class="col-12 mt-5">
        <div class="card form-card">
            <div class="card-body">
                <h4 class="header-title">Edit Category</h4>
                <form action="/categories/edit?id=<%= id %>" method="POST">
                    <% if (locals.error) { %>
                        <div class="alert alert-danger error-msg"><%= error %></div>
                    <% } %>
                    <div class="form-group">
                        <label for="id" class="col-form-label">ID</label>
                        <input class="form-control" type="text" id="id" name="id" value="<%= id %>" readonly required>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-form-label">Name</label>
                        <input class="form-control" type="text" id="name" name="name" value="<%= result[0].category_name %>" required>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Icon</label>
                        <select class="custom-select" name="icon" required>
                            <% Object.keys(materialicons).forEach(function(key) { %>
                                <% var selected = ( materialicons[key] == result[0].icon_link ) ? "selected" : ""; %>
                                <option class="material-icons" value="<%= materialicons[key] %>" <%=selected %>><%= key %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
                </form>
            </div>
        </div>
    </div>

<%- include ('footer') %>