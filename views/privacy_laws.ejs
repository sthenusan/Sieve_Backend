<%- include ('header') %>

    <!-- Progress Table start -->
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Privacy Laws Table
                    <a class="btn btn-rounded btn-xs btn-success ml-3" href="/privacy_laws/add"><i class="fa fa-plus"></i></a>
                </h4>
                <div class="single-table">
                    <div class="table-responsive">
                        <table class="table table-hover progress-table text-center">
                            <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">ID</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Full Link</th>
                                    <th scope="col">Date Created</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% if (result.length > 0) { %>
                                <% for (var i = 0; i < result.length; i++) { %>
                                <tr>
                                    <th scope="row"><%= i+1; %></th>
                                    <td><%= result[i]['law_id']; %></td>
                                    <td><%= result[i]['law']; %></td>
                                    <td class="text-left"><%= result[i]['description']; %></td>
                                    <td class="text-left"><a><%= result[i]['full_link']; %></a></td>
                                    <td class="text-left"><%= result[i]['date_created']; %></td>
                                    <td>
                                        <ul class="d-flex justify-content-center">
                                            <li class="mr-3"><a href="/privacy_laws/edit?id=<%= result[i]['law_id']; %>" class="text-secondary"><i class="fa fa-edit"></i></a></li>
                                            <% id = result[i]['law_id']; %>
                                            <li><a onclick="return confirmDelete('/privacy_laws/delete?id=<%= id %>');" class="text-danger"><i class="ti-trash"></i></a></li>
                                            <!-- <li><a href="#" class="text-danger"><i class="ti-trash"></i></a></li> -->
                                        </ul>
                                    </td>
                                </tr>
                                <% } %>
                            <% } else { %>
                                <tr style="text-align: center; padding: 100px;"><td colspan="6">No results found.</td></tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Progress Table end -->

<%- include ('footer') %>

